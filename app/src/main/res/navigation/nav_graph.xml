<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="il.reversedixit.fragments.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="il.reversedixit.fragments.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <argument
            android:name="description"
            app:argType="string" />
        <action
            android:id="@+id/action_SecondFragment_to_AnswersFragment"
            app:destination="@id/AnswersFragment" />
    </fragment>

    <fragment
        android:id="@+id/AnswersFragment"
        android:name="il.reversedixit.fragments.AnswersFragment"
        tools:layout="@layout/fragment_answers" >
        <action
            android:id="@+id/action_AnswersFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>

</navigation>